<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dogCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/dogImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:contentDescription="Dog Photo"
                android:scaleType="centerCrop"
                tools:src="@color/teal_200"/>

            <TextView
                android:id="@+id/dogNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dogImage"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                tools:text="Dog Breed"/>

            <TextView
                android:id="@+id/dogLoginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dogNameText"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                tools:text="By Bruno Ponte"/>

            <TextView
                android:id="@+id/dogDescriptionLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dogLoginText"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="ABCDEFGH"/>

            <TextView
                android:id="@+id/dogDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dogDescriptionLabelText"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                tools:text="Uma descrição muito muito grande"/>

            <TextView
                android:id="@+id/dogLanguageLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dogDescriptionText"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="2882812u101290"/>

            <TextView
                android:id="@+id/dogLanguageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dogLanguageLabelText"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                tools:text="Uma descrição muito muito grande"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>